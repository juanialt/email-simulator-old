{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "mocha": true,
        "commonjs": true,
        "protractor": true
    },
    "plugins": ["angular"],
    "extends": ["eslint:recommended", "angular"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-warning-comments": 1,
        "no-unused-vars": 1,
        "angular/log": 0,
        "no-console": 0,
        "no-debugger": 0,
        "angular/no-service-method": 0,
        "angular/window-service": 0
    }
}
